<Page x:Class="FitnessTracker.ProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Progress">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Your progress:" Grid.Column="0" Grid.Row="0" Margin="5"/>
        <TextBlock x:Name="progressTextBlock" Grid.Column="0" Grid.Row="1" Margin="5"/>
    </Grid>
</Page>