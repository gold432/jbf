<Window x:Class="MetricSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Metric Selector" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="_metricComboBox" Grid.Column="0" Grid.Row="0" Margin="5" 
                  ItemsSource="{Binding Metrics}" DisplayMemberPath="Name" SelectionChanged="MetricComboBox_SelectionChanged"/>

        <StackPanel x:Name="_metricFieldsPanel" Grid.Column="0" Grid.Row="1" Margin="5">
            <!-- This will be populated dynamically based on the selected metric -->
        </StackPanel>

        <Button x:Name="_submitButton" Grid.Column="1" Grid.Row="1" Margin="5" Content="Submit" Click="SubmitButton_Click"/>
    </Grid>
</Window>
